@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="menu">
    <div class="menu-item">
        ParkId: @Model.GetParkId
    </div>
    <div class="menu-item">
        <button id="simulateButton">Start Simulation</button>
    </div>
</div>
<div class="template-body">
    <div class="spaces">
        @foreach (var space in Model.GetRealSpaces)
        {
            int spaceId = space.Item1;
            string spaceName = space.Item2;

            <div class="space" data-id="@spaceId">
                @Html.Raw(spaceId +" "+ spaceName)
            </div>
        }
    </div>
</div>

